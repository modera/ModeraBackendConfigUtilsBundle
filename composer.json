{
    "name": "modera/backend-config-utils-bundle",
    "type": "symfony-bundle",
    "description": "Bundle provides tools that simplify contributing your own configuration sections to 'Backend/Tools/Settings' section.",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergei Lissovski",
            "email": "sergei.lissovski@modera.org",
            "homepage": "http://sergei.lissovski.org/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/framework-bundle": "~2.0",
        "modera/dynamically-configurable-mjr-bundle": "~1.0|~2.0",
        "modera/server-crud-bundle": "~1.0|~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phake/phake": "~2.0"
    },
    "autoload": {
        "psr-0": { "Modera\\BackendConfigUtilsBundle": "" }
    },
    "target-dir": "Modera/BackendConfigUtilsBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
